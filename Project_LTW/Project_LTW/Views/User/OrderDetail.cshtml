
@{
    ViewBag.Title = "OrderDetail";
}

@model Project_LTW.ORDER
@{
    ViewBag.Title = "Chi tiết đơn hàng " + Model.ORDERID;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Chi tiết đơn hàng: #@Model.ORDERID</h3>
        <a href="@Url.Action("OrderHistory", "User")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-light fw-bold">Thông tin nhận hàng</div>
                <div class="card-body">
                    <p><strong>Ngày đặt:</strong> @string.Format("{0:dd/MM/yyyy HH:mm}", Model.NGAYDAT)</p>
                    <p><strong>Trạng thái:</strong> @Model.TRANGTHAI</p>
                    <hr>
                    <p><strong>Ghi chú:</strong> @(Model.GHICHU ?? "Không có")</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-light fw-bold">Sản phẩm đã mua</div>
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">SL</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ct in Model.ORDERDETAILs)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            
                                            <img src="@Url.Content("~/assets/" + ct.PRODUCT.HINHANHDAIDIEN)" width="50" class="me-2">
                                            <span>@ct.PRODUCT.TENSANPHAM</span>
                                        </div>
                                    </td>
                                    <td class="text-center">@ct.SOLUONG</td>
                                    <td class="text-end">@decimal.Parse(ct.DONGIA.ToString()).ToString("N0")đ</td>
                                    <td class="text-end fw-bold">@decimal.Parse(ct.THANHTIEN.ToString()).ToString("N0")đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold fs-5">Tổng tiền:</td>
                                <td class="text-end fw-bold fs-5 text-danger">@decimal.Parse(Model.TONGTIEN.ToString()).ToString("N0")đ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>