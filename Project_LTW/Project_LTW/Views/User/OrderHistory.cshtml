

@model List<Project_LTW.ORDER>
@{
    ViewBag.Title = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h3 class="mb-4">Lịch sử đơn hàng của tôi</h3>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Người nhận</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td><strong>#@item.ORDERID</strong></td>
                            <td>@string.Format("{0:dd/MM/yyyy HH:mm}", item.NGAYDAT)</td>
                            <td>
                                @* Lấy tên từ bảng Address nếu có, hoặc hiển thị tên user *@
                                @(item.ADDRESS != null ? item.ADDRESS.DUONG: "---")
                            </td>
                            <td class="text-danger fw-bold">@decimal.Parse(item.TONGTIEN.ToString()).ToString("N0")đ</td>
                            <td>
                                @if (item.TRANGTHAI == "Chờ xử lý")
                                {<span class="badge bg-warning text-dark">Chờ xử lý</span> }
                                else if (item.TRANGTHAI == "Đã giao")
                                { <span class="badge bg-success">Đã giao</span> }
                                else if (item.TRANGTHAI == "Đã hủy")
                                { <span class="badge bg-danger">Đã hủy</span> }
                                else
                                { <span class="badge bg-secondary">@item.TRANGTHAI</span>}
                            </td>
                            <td>
                                <a href="@Url.Action("OrderDetail", "User", new { id = item.ORDERID })" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>
                                @if (item.TRANGTHAI == "Chờ xử lý")
                                {
                                    <a href="@Url.Action("CancelOrder", "User", new { id = item.ORDERID.Trim() })"
                                       class="btn btn-sm btn-danger ms-1"
                                       onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này không?');">
                                        <i class="bi bi-x-circle"></i> Hủy
                                    </a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Bạn chưa có đơn hàng nào. <a href="@Url.Action("Index", "Home")">Mua sắm ngay</a>
        </div>
    }
</div>