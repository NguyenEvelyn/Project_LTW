@model Project_LTW.CUSTOMER

@{
    ViewBag.Title = "Thêm khách hàng mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">THÊM KHÁCH HÀNG MỚI</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "Customer", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Họ tên *</label>
                    @Html.EditorFor(model => model.HOTEN, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Nhập họ tên" } })
                    @Html.ValidationMessageFor(model => model.HOTEN, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Email *</label>
                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", required = "required", type = "email", placeholder = "example@email.com" } })
                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Số điện thoại</label>
                    @Html.EditorFor(model => model.DIENTHOAI, new { htmlAttributes = new { @class = "form-control", type = "tel", placeholder = "0123456789" } })
                    @Html.ValidationMessageFor(model => model.DIENTHOAI, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Mật khẩu *</label>
                    @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control", required = "required", type = "password", placeholder = "Nhập mật khẩu" } })
                    @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Lưu khách hàng
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        }
    </div>
</div>

@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}