@model Project_LTW.ORDER

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-8">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }


        <div class="card shadow mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Chi tiết sản phẩm - Đơn #@Model.ORDERID</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ct in Model.ORDERDETAILs)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/@ct.PRODUCT.HINHANHDAIDIEN" width="50" class="me-2" />
                                    @ct.PRODUCT.TENSANPHAM
                                </td>
                                <td class="text-center">@ct.SOLUONG</td>
                                <td>@decimal.Parse(ct.DONGIA.ToString()).ToString("N0") đ</td>
                                <td class="fw-bold">@decimal.Parse(ct.THANHTIEN.ToString()).ToString("N0") đ</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end fw-bold">TỔNG TIỀN:</td>
                            <td class="text-danger fw-bold fs-5">@decimal.Parse(Model.TONGTIEN.ToString()).ToString("N0") đ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow mb-4">
            <div class="card-header bg-secondary text-white">
                <h6 class="mb-0">Thông tin khách hàng & Giao hàng</h6>
            </div>
            <div class="card-body">
                <p><strong>Họ tên:</strong> @Model.CUSTOMER.HOTEN</p>
                <p><strong>SĐT:</strong> @Model.CUSTOMER.DIENTHOAI</p>
                <p><strong>Email:</strong> @Model.CUSTOMER.EMAIL</p>
                <hr />
                <p>
                    <strong>Địa chỉ giao:</strong> <br />
                    @(Model.ADDRESS != null ? $"{Model.ADDRESS.DUONG}, {Model.ADDRESS.THANHPHO}, {Model.ADDRESS.TINH}" : "Không có địa chỉ")
                </p>
                <p><strong>Ghi chú:</strong> @Model.GHICHU</p>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0 fw-bold">Thông tin Thanh toán</h6>
            </div>
            <div class="card-body">
                @{
                    var payment = Model.PAYMENTs.FirstOrDefault();
                }

                @if (payment != null)
                {
                    <p><strong>Phương thức:</strong> @payment.PHUONGTHUCTT</p>
                    <p>
                        <strong>Trạng thái TT:</strong>
                        @{
                            string badgeClass = "bg-warning";
                            if (payment.TRANGTHAITT == "Đã thanh toán") { badgeClass = "bg-success"; }
                            else if (payment.TRANGTHAITT == "Chưa thanh toán" || payment.TRANGTHAITT == "Chờ xác nhận") { badgeClass = "bg-danger"; }
                        }
                        <span class="badge @badgeClass fs-6">@payment.TRANGTHAITT</span>
                    </p>
                    <p><strong>Ngày TT:</strong> @(payment.NGAYTT.HasValue ? payment.NGAYTT.Value.ToString("dd/MM/yyyy") : "Chưa có")</p>

                    if (payment.TRANGTHAITT != "Đã thanh toán")
                    {
                        <hr />
                        using (Html.BeginForm("ConfirmPayment", "Order", FormMethod.Post))
                        {
                            @Html.Hidden("orderId", Model.ORDERID)
                            <button type="submit" class="btn btn-primary w-100"
                                    onclick="return confirm('Bạn có chắc chắn muốn xác nhận thanh toán thành công cho đơn hàng này không? Việc này không thể hoàn tác.');">
                                <i class="bi bi-check-circle me-2"></i> Xác nhận Đã thanh toán
                            </button>
                        }
                    }
                }
                else
                {
                    <p class="text-danger">Không có thông tin thanh toán cho đơn hàng này.</p>
                }
            </div>
        </div>


        <div class="card shadow border-warning mb-4">
            <div class="card-header bg-warning">
                <h6 class="mb-0 fw-bold">Cập nhật trạng thái Đơn hàng</h6>
            </div>
            <div class="card-body">
                <p>
                    Trạng thái hiện tại:
                    <span class="badge bg-primary fs-6">@Model.TRANGTHAI</span>
                </p>

                @using (Html.BeginForm("UpdateStatus", "Order", FormMethod.Post))
                {
                    @Html.Hidden("id", Model.ORDERID)

                    <div class="mb-3">
                        <select name="trangThai" class="form-select">
                            <option value="Chờ xử lý" @(Model.TRANGTHAI == "Chờ xử lý" ? "selected" : "")>Chờ xử lý</option>
                            <option value="Đã xác nhận" @(Model.TRANGTHAI == "Đã xác nhận" ? "selected" : "")>Đã xác nhận</option>
                            <option value="Đang giao" @(Model.TRANGTHAI == "Đang giao" ? "selected" : "")>Đang giao hàng</option>
                            <option value="Đã giao" @(Model.TRANGTHAI == "Đã giao" ? "selected" : "")>Đã giao (Hoàn tất)</option>
                            <option value="Đã hủy" @(Model.TRANGTHAI == "Đã hủy" ? "selected" : "")>Hủy đơn</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Cập nhật ngay</button>
                }
            </div>
        </div>

        <div class="mt-3">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">Quay lại danh sách</a>
        </div>
    </div>
</div>