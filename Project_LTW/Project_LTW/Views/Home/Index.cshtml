﻿@{
    ViewBag.Title = "Index";
}
@using Project_LTW;

<button id="backToTop" class="btn btn-dark rounded-circle position-fixed" style="bottom: 20px; right: 20px; display: none; z-index: 1000;">
    <i class="bi bi-arrow-up-circle m-0"></i>
</button>

<!-- Banner Section -->
<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="10000">
            <img src="@Url.Content("~/assets/homePage/banner/1136x532_2x-100_180425 - Copy.jpg")"
                 class="d-block w-100"
                 alt="Banner 1" />
        </div>
        <div class="carousel-item" data-bs-interval="5000">
            <img src="@Url.Content("~/assets/homePage/banner/artboard_4_2x-100 - Copy.jpg")"
                 class="d-block w-100"
                 alt="Banner 2" />
        </div>
        <div class="carousel-item" data-bs-interval="5000">
            <img src="@Url.Content("~/assets/homePage/banner/1366x532_280325 - Copy.jpg")"
                 class="d-block w-100"
                 alt="Banner 3" />
        </div>
        <div class="carousel-item" data-bs-interval="5000">
            <img src="@Url.Content("~/assets/homePage/banner/crop-file.jpg")"
                 class="d-block w-100"
                 alt="Banner 4" />
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Decor Section -->
<div class="container mt-4">
    <img src="~/assets/homePage/decor.png" class="img-fluid" alt="Decoration" />
</div>

<!-- Tops Section -->
<section class="section-tops py-5 bg-light">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="section-title">TOPS</h2>
            </div>
        </div>

        <div class="row g-3">
            <!-- Main Product -->
            <div class="col-lg-6">
                <div class="featured-product position-relative overflow-hidden rounded-3">
                    <img src="@Url.Content("~/assets/homePage/TOPS/main.jpg")"
                         class="img-fluid w-100 product-image"
                         alt="LED SIGN Teddy Bear New Tee" />
                    <div class="product-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-end">
                        <div class="product-info text-white p-4 w-100">
                            <h4 class="fw-bold">LED SIGN /teddy bear/ NEW TEE™</h4>
                            <div class="price-info">
                                <s class="text-light opacity-75">390.000đ</s>
                                <p class="text-warning fw-bold fs-4 mb-2">Ưu đãi: 99.000đ</p>
                            </div>
                            <button onclick="window.location.href='@Url.Action("Details", "Home")'"
                                    class="btn btn-outline-light btn-lg">
                                Mua ngay
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Side Products -->
            <div class="col-lg-6">
                <div class="row g-3 h-100">
                    @if (ViewBag.MainApparelProducts != null)
                    {
                        foreach (var item in (IEnumerable<PRODUCT>)ViewBag.MainApparelProducts)
                        {
                            <div class="col-md-6">
                                <div class="card h-100 product-card border-0 shadow-sm">
                                    <div class="card-img-top-container">
                                        <img src="@Url.Content("~/assets/" + item.HINHANHDAIDIEN)"
                                             class="card-img-top"
                                             alt="@item.TENSANPHAM" />
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h6 class="card-title fw-semibold">@item.TENSANPHAM</h6>
                                        <div class="price-section mt-auto">
                                            <p class="text-danger fw-bold fs-5 mb-1">@Html.FormatValue(item.GIA, "{0:#,###}") VND</p>

                                            <div class="d-flex gap-2">
                                                <button onclick="showToast()"
                                                        class="btn btn-outline-primary btn-sm flex-fill">
                                                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                                                </button>
                                                <a href="@Url.Action("Details", "Home", new { id = item.SANPHAMID.Trim() })"
                                                   class="btn btn-dark btn-sm flex-fill">

                                                    Mua ngay
                                                </a>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12 text-center">
                <a href="@Url.Action("Product", "Home")" class="btn btn-outline-dark see-more-btn">
                    Xem thêm
                    <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Accessories Section -->
<section class="section-accessories py-5 bg-white">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="section-title">ACCESSORIES</h2>
            </div>
        </div>

        <div class="row g-3">
            <!-- Main Product -->
            <div class="col-lg-6">
                <div class="featured-product position-relative overflow-hidden rounded-3">
                    <img src="@Url.Content("~/assets/homePage/ACCESSORIES/main.jpg")"
                         class="img-fluid w-100 product-image"
                         alt="Public Icon Long Wallet" />
                    <div class="product-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-end">
                        <div class="product-info text-white p-4 w-100">
                            <h4 class="fw-bold">/PUBLIC ICON/ LONG WALLET</h4>
                            <div class="price-info">
                                <s class="text-light opacity-75">350.000đ</s>
                                <p class="text-warning fw-bold fs-4 mb-2">Ưu đãi: 143.000đ</p>
                            </div>
                            <button onclick="window.location.href='@Url.Action("AddtoCart", "Cart")'"
                                    class="btn btn-outline-light btn-lg">
                                Mua ngay
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Side Products -->
            <div class="col-lg-6">
                <div class="row g-3 h-100">
                    @if (ViewBag.AccessoryProducts != null)
                    {
                        foreach (var item in (IEnumerable<PRODUCT>)ViewBag.AccessoryProducts)
                        {
                            <div class="col-md-6">
                                <div class="card h-100 product-card border-0 shadow-sm">
                                    <div class="card-img-top-container">
                                        <img src="@Url.Content("~/assets/" + item.HINHANHDAIDIEN)"
                                             class="card-img-top"
                                             alt="@item.TENSANPHAM" />
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h6 class="card-title fw-semibold">@item.TENSANPHAM</h6>
                                        <div class="price-section mt-auto">
                                            <p class="text-danger fw-bold fs-5 mb-1">@Html.FormatValue(item.GIA, "{0:#,###}") VND</p>

                                            <div class="d-flex gap-2">
                                                <button onclick="showToast()"
                                                        class="btn btn-outline-primary btn-sm flex-fill" >
                                                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                                                </button>
                                                <a href="@Url.Action("AddtoCart", "Cart", new { id = item.SANPHAMID.Trim() })"
                                                   class="btn btn-dark btn-sm flex-fill">

                                                    Mua ngay
                                                </a>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12 text-center">
                <a href="@Url.Action("Product", "Home")" class="btn btn-outline-dark see-more-btn">
                    Xem thêm
                    <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>


<!-- Toast Notification -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="add-success" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header bg-success text-white">
            <i class="bi bi-bag-check me-2"></i>
            <strong class="me-auto">Thành công</strong>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Đã thêm vào giỏ hàng!
        </div>
    </div>
</div>

<style>
    .section-title {
        font-weight: bolder;
        color: #333;
        position: relative;
        padding-bottom: 10px;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background: linear-gradient(45deg, #ff6b6b, #ee5a24);
        }

    .featured-product {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        transition: transform 0.3s ease;
    }

        .featured-product:hover {
            transform: translateY(-5px);
        }

    .product-overlay {
        background: linear-gradient(transparent 30%, rgba(0,0,0,0.8) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .featured-product:hover .product-overlay {
        opacity: 1;
    }

    .product-card {
        transition: all 0.3s ease;
        border: none !important;
    }

        .product-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

    .card-img-top-container {
        height: 200px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-img-top {
        height: 100%;
        width: auto;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .card-img-top {
        transform: scale(1.05);
    }

    .see-more-btn {
        transition: all 0.3s ease;
        border-width: 2px;
        font-weight: 500;
    }

        .see-more-btn:hover {
            background-color: #333;
            color: white;
            transform: translateX(5px);
        }

    .btn-group .btn {
        border-radius: 5px !important;
    }
</style>

<script>
    // Code cho Toast
    function showToast() {
        const toastEl = document.getElementById("add-success");
        const toastBootstrap = bootstrap.Toast.getOrCreateInstance(toastEl, {
            delay: 2000,
        });
        toastBootstrap.show();
    }

    // Code cho nút BackToTop
    const backToTopBtn = document.getElementById("backToTop");

    window.addEventListener("scroll", () => {
        if (window.scrollY > 300) {
            backToTopBtn.style.display = "flex";
        } else {
            backToTopBtn.style.display = "none";
        }
    });

    backToTopBtn.addEventListener("click", () => {
        window.scrollTo({
            top: 0,
            behavior: "smooth",
        });
    });

    // Khởi tạo tooltips
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
    const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));
</script>