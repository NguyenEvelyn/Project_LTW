@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 100px; margin-bottom: 50px;">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="font-weight-light my-1">Đăng Ký Tài Khoản</h3>
                </div>

                <div class="card-body p-4">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form action="@Url.Action("Register", "User")" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="HOTEN" id="inputName" placeholder="Nhập họ tên" required />
                            <label for="inputName">Họ và tên</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" name="EMAIL" id="inputEmail" placeholder="name@example.com" required />
                            <label for="inputEmail">Địa chỉ Email</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="tel" class="form-control" name="DIENTHOAI" id="inputPhone" placeholder="Số điện thoại" />
                            <label for="inputPhone">Số điện thoại</label>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input type="password" class="form-control" name="PASSWORD" id="inputPassword" placeholder="Mật khẩu" required />
                                    <label for="inputPassword">Mật khẩu</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input type="password" class="form-control" name="ConfirmPassword" id="inputPasswordConfirm" placeholder="Nhập lại mật khẩu" required />
                                    <label for="inputPasswordConfirm">Xác nhận MK</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4 mb-0">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-plus-fill"></i> Đăng Ký Ngay
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center py-3">
                    <div class="small">
                        Đã có tài khoản? <a href="@Url.Action("Login", "User")" class="text-decoration-none fw-bold">Đăng nhập tại đây</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>