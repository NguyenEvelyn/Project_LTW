
@{
    ViewBag.Title = "Login";
}


<!-- Main Layout (Form Login) -->
<div class="container">
    <div class="login-container mt-4" style="width: 400px; margin:auto">
        <div class="card shadow-lg p-3">
            <h3 class="card-title text-center fw-bold text-primary mb-4">Đăng nhập</h3>
            @using (Html.BeginForm("LoginOnSubmit", "User", FormMethod.Post))
            {
                <div class=" w-100 mb-3">
                    <label for="loginEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" name="Email" required>
                </div>
                <div class="w-100 mb-3">
                    <label for="loginPassword" class="form-label">Mật khẩu</label>
                    <input type="password" class="form-control" name="Password" required>
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3">ĐĂNG NHẬP</button>
                <p class="text-center">
                    Chưa có tài khoản? <a href="@Url.Action("Register", "User")" class="text-decoration-none fw-bold">Đăng ký ngay</a>
                </p>
            }

            <div> @ViewBag.Error</div>
        </div>
    </div>
</div>
