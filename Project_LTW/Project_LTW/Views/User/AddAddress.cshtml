@model Project_LTW.ADDRESS

@{
    ViewBag.Title = "Thêm Địa chỉ mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="text-center mb-4">THÊM ĐỊA CHỈ MỚI</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">

                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    @using (Html.BeginForm("AddAddress", "User", FormMethod.Post, new { @class = "row g-3" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.DIACHIID) // Hidden nhưng sẽ được tạo lại trong Controller
                        @Html.HiddenFor(model => model.KHACHHANGID) // Hidden, được lấy từ Session

                        <div class="col-12">
                            <label for="DUONG" class="form-label fw-bold">Địa chỉ chi tiết (Số nhà, Tên đường/phố)</label>
                            @Html.EditorFor(model => model.DUONG, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Ví dụ: 123 Đường Nguyễn Văn Linh" } })
                            @Html.ValidationMessageFor(model => model.DUONG, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            <label for="TINH" class="form-label fw-bold">Tỉnh/Thành phố</label>
                            @Html.EditorFor(model => model.TINH, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.TINH, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            <label for="THANHPHO" class="form-label fw-bold">Quận/Huyện/Thành phố</label>
                            @Html.EditorFor(model => model.THANHPHO, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.THANHPHO, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            <label for="ZIPCODE" class="form-label">Mã bưu chính (Zip Code)</label>
                            @Html.EditorFor(model => model.ZIPCODE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ví dụ: 70000" } })
                            @Html.ValidationMessageFor(model => model.ZIPCODE, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-12 mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-warning btn-lg">Lưu Địa chỉ</button>
                            <a href="@Url.Action("AccountProfile", "User")" class="btn btn-secondary btn-lg">Hủy</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>