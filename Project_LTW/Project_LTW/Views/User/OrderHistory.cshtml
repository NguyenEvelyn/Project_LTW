@model List<Project_LTW.FN_DANHSACHDONHANG_KH_Result>

@{
    ViewBag.Title = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h3 class="mb-4">Lịch sử đơn hàng của tôi</h3>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Số lượng SP</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>#@item.ORDERID</strong></td>

                            <td>@item.NGAYDAT.ToString("dd/MM/yyyy HH:mm")</td>

                            <td class="text-center">
                                <span class="badge bg-info text-dark">@item.SOSP sản phẩm</span>
                            </td>

                            <td class="text-danger fw-bold">
                                @item.TONGTIEN.ToString("N0")đ
                            </td>

                            <td>
                                @if (item.TRANGTHAI == "Chờ xử lý")
                                {<span class="badge bg-warning text-dark">Chờ xử lý</span> }
                                else if (item.TRANGTHAI == "Đã giao")
                                { <span class="badge bg-success">Đã giao</span> }
                                else if (item.TRANGTHAI == "Đã hủy")
                                { <span class="badge bg-danger">Đã hủy</span> }
                                else
                                { <span class="badge bg-secondary">@item.TRANGTHAI</span>}
                            </td>

                            <td>
                                <a href="@Url.Action("OrderDetail", "User", new { id = item.ORDERID })" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>

                                @if (item.TRANGTHAI != null && item.TRANGTHAI.Contains("Chờ"))
                                {
                                    <a href="@Url.Action("CancelOrder", "User", new { id = item.ORDERID.Trim() })"
                                       class="btn btn-sm btn-danger ms-1"
                                       onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này không?');">
                                        <i class="bi bi-x-circle"></i> Hủy
                                    </a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Bạn chưa có đơn hàng nào. <a href="@Url.Action("Index", "Home")">Mua sắm ngay</a>
        </div>
    }
</div>