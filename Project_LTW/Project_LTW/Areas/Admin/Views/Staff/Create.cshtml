@model Project_LTW.STAFF

@{
    ViewBag.Title = "Thêm nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Thêm Nhân Viên Mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>Mã NV</label>
            @Html.EditorFor(model => model.MANV, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MANV, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Họ Tên</label>
            @Html.EditorFor(model => model.HOTEN, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Mật khẩu</label>
            @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
        </div>

        <div class="form-group">
            <label>Chức vụ</label>
            @Html.EditorFor(model => model.CHUCVU, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label>Lương</label>
            @Html.EditorFor(model => model.LUONG, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
        </div>

        <div class="form-group">
            <input type="submit" value="Tạo mới" class="btn btn-primary" />
        </div>
    </div>
}