
@{
    ViewBag.Title = "ProductPage";
}


@using Project_LTW
@model List<Project_LTW.PRODUCT>

<div class="container py-4">

    @if (Session["User"] != null)
    {
        <div class="alert alert-info mb-4">
            Xin chào, <strong>@(((CUSTOMER)Session["User"]).HOTEN)</strong>
        </div>
    }

    <div class="row">

        <div class="col-lg-3 mb-4">
            @Html.Action("_Category", "Home")
        </div>

        <div class="col-lg-9">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="fw-bold text-dark">Tất cả sản phẩm</h3>
                <span class="text-muted">Hiển thị @Model.Count() sản phẩm</span>
            </div>

            <div class="row">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-4 col-sm-6 mb-4">
                            <div class="card h-100 border-0 shadow-sm product-card">
                                <div class="card-img-top-container position-relative overflow-hidden" style="height: 250px;">
                                    <img src="@Url.Content("~/assets/" + item.HINHANHDAIDIEN)"
                                         class="card-img-top w-100 h-100"
                                         style="object-fit: cover;"
                                         alt="@item.TENSANPHAM" />
                                </div>

                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title fw-bold text-truncate" title="@item.TENSANPHAM">
                                        <a href="@Url.Action("Details", "Home", new { id = item.SANPHAMID.Trim() })" class="text-decoration-none text-dark">
                                            @item.TENSANPHAM
                                        </a>
                                    </h6>

                                    <div class="mt-auto">
                                        <p class="text-danger fw-bold fs-5 mb-2">@Html.FormatValue(item.GIA, "{0:#,###}") đ</p>

                                        <div class="d-grid gap-2">
                                            <a href="@Url.Action("ThemGioHang", "Cart", new { id = item.SANPHAMID.Trim(), type = "normal" })"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                                            </a>
                                            <a href="@Url.Action("Details", "Home", new { id = item.SANPHAMID.Trim() })"
                                               class="btn btn-light btn-sm">
                                                Xem chi tiết
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-warning text-center">
                            Không tìm thấy sản phẩm nào trong danh mục này.
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
