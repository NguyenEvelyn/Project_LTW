
@{
    ViewBag.Title = "Success";
}


<div class="container py-5">
    <div class="text-center">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
        </div>
        <h1 class="text-success mb-3">Đặt hàng thành công!</h1>

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show col-md-6 mx-auto" role="alert">
                <h4 class="alert-heading">@ViewBag.SuccessMessage</h4>
                <p class="mb-0">Cảm ơn bạn đã mua hàng. Chúng tôi sẽ liên hệ với bạn trong thời gian sớm nhất.</p>
            </div>
        }

        <div class="mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-3">
                <i class="bi bi-house me-2"></i>Về trang chủ
            </a>
            <a href="@Url.Action("Product", "Home")" class="btn btn-outline-primary">
                <i class="bi bi-bag me-2"></i>Tiếp tục mua sắm
            </a>
        </div>
    </div>
</div>