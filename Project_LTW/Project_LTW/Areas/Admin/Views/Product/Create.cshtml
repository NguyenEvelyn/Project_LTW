@model Project_LTW.PRODUCT

@{
    ViewBag.Title = "Thêm sản phẩm mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">THÊM SẢN PHẨM MỚI</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên sản phẩm</label>
                        @Html.EditorFor(model => model.TENSANPHAM, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Giá bán (VNĐ)</label>
                            @Html.EditorFor(model => model.GIA, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Giá gốc (VNĐ)</label>
                            @Html.EditorFor(model => model.GIAGOC, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Số lượng tồn</label>
                            @Html.EditorFor(model => model.SOLUONGTONKHO, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Màu sắc</label>
                            <input type="text" name="strMAUSAC" class="form-control" placeholder="Nhập các màu cách nhau dấu phẩy (Vd: Đỏ, Xanh, Vàng)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Size</label>
                            <input type="text" name="strSIZE" class="form-control" placeholder="Nhập các size cách nhau dấu phẩy (Vd: S, M, L)" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả sản phẩm</label>
                        <textarea class="form-control" name="MOTA" rows="5"></textarea>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Danh mục</label>
                        @Html.DropDownList("DANHMUCID", null, htmlAttributes: new { @class = "form-select" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Hình ảnh đại diện</label>
                        <input type="file" name="UploadImage" class="form-control" accept="image/*" onchange="previewImage(this)" />
                        <div class="mt-3 text-center">
                            <img id="preview" src="#" alt="Xem trước ảnh" class="img-thumbnail d-none" style="max-width: 100%; height: auto;" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Lưu sản phẩm</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
            </div>
        }
    </div>
</div>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var img = document.getElementById('preview');
                img.src = e.target.result;
                img.classList.remove('d-none');
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>