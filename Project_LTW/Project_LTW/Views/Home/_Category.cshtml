@{
    ViewBag.Title = "_Category";
}
@model IEnumerable<Project_LTW.CATEGORY>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-bottom">
        <h5 class="mb-0 fw-bold text-uppercase" style="font-size: 1rem;">Danh mục</h5>
    </div>
    <div class="list-group list-group-flush">
        @foreach (var item in Model)
        {
            <a href="@Url.Action("TimKiemCategory", "Home", new { id = item.DANHMUCID.Trim() })"
               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3 text-muted">

                <span>@item.TENDANHMUC</span>

                <span class="badge bg-light text-secondary rounded-pill">@item.PRODUCTs.Count()</span>
            </a>
        }
    </div>
</div>